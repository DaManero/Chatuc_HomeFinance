# ============================================
# Frontend & Backend Environment Variables
# ============================================

# Frontend - CAMBIAR SEGÚN EL AMBIENTE
# Para desarrollo local:
NEXT_PUBLIC_API_URL=http://localhost:3000
# Para producción en Render, usa la URL de tu backend (ejemplo):
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com

# Backend
PORT=3000
NODE_ENV=development

# URLs del frontend (para CORS en backend)
FRONTEND_URL=http://localhost:3001
# Para Render:
# FRONTEND_URL=https://your-frontend.onrender.com
RENDER_EXTERNAL_URL=https://your-backend.onrender.com

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root_password
DB_NAME=home_finance_dev

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# API URL (backend internal)
API_URL=http://localhost:3000

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
