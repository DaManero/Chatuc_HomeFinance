{
    "delay": 2000,
    "verbose": true,
    "signal": "SIGTERM",
    "ignore": [
        "*.test.js",
        "*.spec.js",
        "node_modules/**",
        ".git",
        "*.md"
    ],
    "watch": [
        "src"
    ],
    "ext": "js,json",
    "execMap": {
        "js": "node"
    },
    "events": {
        "restart": "echo ⚡ Reiniciando servidor...",
        "crash": "echo ❌ Servidor caído - esperando cambios..."
    },
    "restartable": "rs"
}